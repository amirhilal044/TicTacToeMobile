<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginPlayers">


    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Enter Existing Usernames for player 1 and player 2 and battle length to start a battle(Player 1 is X and Player 2 is O)"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        />
        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="player1"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_marginBottom="15dp"
            android:background="#E6E6E6"
            android:gravity="center"
            android:id="@+id/tvPlayer1NameLog"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="#E6E6E6"
            android:hint="player2"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="23dp"
            android:id="@+id/tvPlayer2NameLog"
            android:gravity="center"
            />


    <Button
        android:id="@+id/button_start"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="23dp"
        android:backgroundTint="@color/black"
        android:text="Start Game"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_200"
        android:text="Back"
        android:layout_gravity="center"/>

</LinearLayout>